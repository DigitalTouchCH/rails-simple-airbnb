<div id="<%= dom_id @flat %>" style="width: 50rem;">

  <div class="card-header mt-4 mb-4">
    <h1><%= @flat.name %></h1>
    <p><strong><%= @flat.address %></strong></p>
  </div>

  <div class="card-header mb-4">
    <h3>A bit more about this flat...</h3>
    <p><strong><%= @flat.description %></strong></p>
  </div>

  <div class="card-header mb-4">
    <h3>Details</h3>
    <i class="fa-solid fa-users"></i><%=@flat.number_of_guests %>
    <i class="fa-solid fa-euro-sign"></i><%= @flat.price_per_night %>
  </div>

  <div class="card-body d-grid gap-2 d-md-flex justify-content-center" >
    <%= link_to "Back to flats", flats_path, class:"btn btn-primary" %>
    <%= link_to "Edit this flat", edit_flat_path(@flat), class:"btn btn-warning" %>
    <%= button_to "Destroy this flat", @flat, method: :delete, class:"btn btn-danger" %>
  </div>
</div>
